<h1>Cart:</h1>
<table>
    <thead>
    <tr>
      <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
    <% total = 0 %>
    <% @cart.each do |cart| %>
        <tr> <% total = total + cart.product.price %>
            <td><%= cart.product.title %></td>
            <td>$<%= '%.2f' % cart.product.price %></td>
            <td><%= cart.qty %></td>
        </tr>
    <% end %>
        <tr>
            <td>Total: </td>
            <td>$<%= @amount = ('%.2f' % (total * @cart.sum(:qty))) %></td>
            <td><%= @cart.sum(:qty) %></td>
        </tr>
</tbody>
</table>
